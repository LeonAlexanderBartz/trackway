{% extends "AppBundle::layout.html.twig" %}
{% trans_default_domain 'AppBundle' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}

{% block class %}timeentry{% endblock class %}

{% block content %}
    <h1>TimeEntry</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Ends At</th>
            <td>{{ entity.endsAt|date('H:i') }}</td>
        </tr>
        <tr>
            <th>Starts At</th>
            <td>{{ entity.startsAt|date('H:i') }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ entity.note }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('timeentry') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('timeentry_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock content %}
