{% extends "AppBundle::layoutOffCanvas.html.twig" %}
{% trans_default_domain 'AppBundle' %}

{% block class %}team{% endblock class %}

{% block contentOffCanvas %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Memberships</th>
            <td>
                <ul>
                    {% for memberhsip in entity.memberships %}
                        <li>{{ memberhsip }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Projects</th>
            <td>
                <ul>
                    {% for project in entity.projects %}
                        <li>{{ project }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Tasks</th>
            <td>
                <ul>
                    {% for task in entity.tasks %}
                        <li>{{ task }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock contentOffCanvas %}

{% block sidebarOffCanvas %}
    <a href="{{ path('team_index') }}" class="list-group-item">Index</a>
    {% if is_granted('EDIT', entity) %}
        <a href="{{ path('team_edit', { 'id': entity.id }) }}" class="list-group-item">Edit</a>
        <a href="{{ path('team_delete', { 'id': entity.id }) }}" class="list-group-item">Delete</a>
    {% endif %}
{% endblock sidebarOffCanvas %}
