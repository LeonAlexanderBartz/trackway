{% extends "AppBundle::layout.html.twig" %}
{% trans_default_domain 'AppBundle' %}

{% block class %}team{% endblock class %}

{% block content %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Memberships</th>
            <td>
                <ul>
                    {% for memberhsip in entity.memberships %}
                        <li>{{ memberhsip }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Projects</th>
            <td>
                <ul>
                    {% for project in entity.projects %}
                        <li>{{ project }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Tasks</th>
            <td>
                <ul>
                    {% for task in entity.tasks %}
                        <li>{{ task }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('team_index') }}" class="btn btn-default">Index</a>
        {% if is_granted('EDIT', entity) %}
            <a href="{{ path('team_edit', { 'id': entity.id }) }}" class="btn btn-default">Edit</a>
            <a href="{{ path('team_delete', { 'id': entity.id }) }}" class="btn btn-danger">Delete</a>
        {% endif %}
    </div>
{% endblock content %}
