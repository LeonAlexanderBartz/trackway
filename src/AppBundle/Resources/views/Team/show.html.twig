{% extends "AppBundle::layoutSidebar.html.twig" %}

{% block class %}team{% endblock class %}

{% block title %}
    <h1>{{ 'team.template.show.title'|trans }}</h1>
{% endblock %}

{% block content %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'team.entity.name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'team.entity.projects'|trans }}</th>
            <td>
                <ul>
                    {% for project in entity.projects %}
                        <li>{{ project }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>{{ 'team.entity.tasks'|trans }}</th>
            <td>
                <ul>
                    {% for task in entity.tasks %}
                        <li>{{ task }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['appbundle_team_menu', 'team'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
