{% extends 'AppBundle::layoutSidebar.html.twig' %}

{% block class %}invitation{% endblock class %}

{% block header %}
    <h1>{{ 'invitation.template.show.title'|trans }}</h1>
{% endblock %}

{% block content %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'invitation.entity.email'|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ 'invitation.entity.status'|trans }}</th>
            <td>{{ entity.status.name|trans }}</td>
        </tr>
        {% if entity.user %}
            <tr>
                <th>{{ 'invitation.entity.user'|trans }}</th>
                <td>{{ entity.user }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['appbundle_team_menu', 'team', 'team.invitation'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
