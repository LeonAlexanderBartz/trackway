<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="{{ _charset }}" />
    <title>{% block title %}{% endblock title %}</title>

    {% block stylesheets %}<link href="{{ asset('css/combined.css') }}" rel="stylesheet">{% endblock %}

    {% block favicon %}{% include '@App/favicons.html.twig' %}{% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block class %}{% endblock class %}">
    <div id="wrapper"><nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#navbar-collapse">
                        <span class="sr-only">{{ 'template.toggleNavigation'|trans }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('dashboard_index') }}">{{ 'template.title'|trans }}</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    {% block navbar %}{% endblock %}
                </div>
            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <div id="push"></div>
    </div>

    <div id="footer">
        <div class="container">
            <p class="text-muted">{{ 'template.forkIt'|trans({'%link%': 'https://github.com/MewesK/trackway'})|raw }}</p>
        </div>
    </div>

    {% block javascripts %}<script src="{{ asset('js/combined.js') }}"></script>{% endblock %}
</body>
</html>
