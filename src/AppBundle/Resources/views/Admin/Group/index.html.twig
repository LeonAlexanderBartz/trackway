{% extends "AppBundle::layoutOffCanvasMain.html.twig" %}

{% block class %}group{% endblock class %}

{% block titleOffCanvas %}
    <h1>Groups</h1>
{% endblock titleOffCanvas %}

{% block contentOffCanvas %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Roles</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.roles }}</td>
                <td class="text-right">
                    <a href="{{ path('admin_group_show', { 'id': entity.id }) }}" class="btn btn-sm btn-default"><i
                                class="fa fa-eye"></i></a>
                    <a href="{{ path('admin_group_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-default"><i
                                class="fa fa-pencil-square-o"></i></a>
                    <a href="{{ path('admin_group_delete', { 'id': entity.id }) }}" class="btn btn-sm btn-danger"><i
                                class="fa fa-times"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock contentOffCanvas %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['AppBundle:Builder:adminMenu', 'Groups'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
