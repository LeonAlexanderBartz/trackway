{% extends "AppBundle::layoutOffCanvasMain.html.twig" %}

{% block class %}group{% endblock class %}

{% block titleOffCanvas %}
    <h1>{{ 'admin.group.show.title'|trans }}</h1>
{% endblock titleOffCanvas %}

{% block contentOffCanvas %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'admin.group.name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'admin.group.roles'|trans }}</th>
            <td>{{ entity.roles }}</td>
        </tr>
        </tbody>
    </table>
{% endblock contentOffCanvas %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['AppBundle:Builder:adminMenu', 'Groups'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
