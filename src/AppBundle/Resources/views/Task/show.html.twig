{% extends "AppBundle::layoutOffCanvasMain.html.twig" %}

{% block class %}task{% endblock class %}

{% block titleOffCanvas %}
    <h1>{{ 'task.template.show.title'|trans }}</h1>
{% endblock titleOffCanvas %}

{% block contentOffCanvas %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'task.entity.name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        </tbody>
    </table>
{% endblock contentOffCanvas %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['appbundle_main_menu', 'task'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
