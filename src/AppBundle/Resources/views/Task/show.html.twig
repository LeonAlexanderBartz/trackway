{% extends "AppBundle::layout.html.twig" %}
{% trans_default_domain 'AppBundle' %}
{% form_theme delete_form 'bootstrap_3_layout.html.twig' %}

{% block class %}task{% endblock class %}

{% block content %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('task') }}">
                Back to the list
            </a>
        </li>
        {% if is_granted('EDIT', entity) %}
            <li>
                <a href="{{ path('task_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        {% endif %}
    </ul>
{% endblock content %}
