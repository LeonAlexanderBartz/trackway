{% extends "AppBundle::layout.html.twig" %}

{% block body %}
    <body class="login-page">
    <div class="login-box">
        <div class="login-logo">{{ 'template.title'|trans }}</div>
        {% set messageTypeClasses = { 'success': 'alert-success', 'info': 'alert-info', 'warning': 'alert-warning', 'error': 'alert-danger'} %}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="alert{% if messageTypeClasses[type] is defined %} {{ messageTypeClasses[type] }}{% endif %} alert-dismissable" role="alert">
                    <h4><i class="icon fa fa-ban"></i> {{ 'template.alert'|trans }}!</h4>
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="login-box-body">
            <p class="login-box-msg">{{ 'security.template.login.message'|trans }}</p>
            <form action="{{ path("security_login_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Email" name="_username" value="{{ entity.username }}" required autofocus/>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="_password" required/>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="_remember_me" value="on"> {{ 'security.login.entity.rememberMe'|trans }}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" name="_submit">{{ 'security.login.entity.submit'|trans }}</button>
                    </div>
                </div>
            </form>
            <a href="{{ path("resetting_request") }}">{{ 'security.login.action.resetting'|trans }}</a><br>
            <a href="{{ path("registration_register") }}">{{ 'security.login.action.registration'|trans }}</a>
        </div>
    </div>

    <script src="{{ asset('js/combined.js') }}"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%'
            });
        });
    </script>
    </body>
{% endblock %}
