{% extends "AppBundle::layout.html.twig" %}
{% form_theme form 'AppBundle:Form:adminLte.html.twig' %}

{% block body %}
    <body class="register-page">
    <div class="register-box">
        <div class="register-logo">
            <img src="{{ asset('images/logo_black.png') }}">
            {{ 'template.title'|trans }}
        </div>
        {% set messageTypeClasses = { 'success': 'alert-success', 'info': 'alert-info', 'warning': 'alert-warning', 'error': 'alert-danger'} %}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="alert{% if messageTypeClasses[type] is defined %} {{ messageTypeClasses[type] }}{% endif %} alert-dismissable" role="alert">
                    <h4><i class="icon fa fa-ban"></i> {{ 'template.alert'|trans }}!</h4>
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="register-box-body">
            <p class="login-box-msg">{{ 'registration.template.register.message'|trans }}</p>
            <form action="" method="post">
                {{ form_row(form._token) }}
                <div class="form-group has-feedback">
                    {{ form_errors(form.username) }}
                    <input type="text" class="form-control" placeholder="{{ 'user.entity.username'|trans }}" name="appbundle_registration_form[username]" required="required" maxlength="255" pattern=".{3,}"/>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_errors(form.email) }}
                    <input type="email" class="form-control" placeholder="{{ 'user.entity.email'|trans }}" name="appbundle_registration_form[email]" required="required"/>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_errors(form.password) }}
                    <input type="password" class="form-control" placeholder="{{ 'user.entity.password'|trans }}" name="appbundle_registration_form[password][first]" required="required"/>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="{{ 'user.entity.passwordRepeat'|trans }}" name="appbundle_registration_form[password][second]" required="required"/>
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" required=""> {{ 'registration.template.register.terms'|trans }}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" name="appbundle_registration_form[submit]">{{ 'registration.template.register.submit'|trans }}</button>
                    </div>
                </div>
            </form>

            <a href="{{ path('security_login') }}" class="text-center">{{ 'registration.template.register.login'|trans }}</a>
        </div>
    </div>

    <script src="{{ asset('js/combined.js') }}"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%'
            });
        });
    </script>
    </body>
{% endblock %}
