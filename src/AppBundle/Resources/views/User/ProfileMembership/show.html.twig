{% extends "AppBundle::layoutSidebar.html.twig" %}

{% block class %}profile_membership{% endblock class %}

{% block header %}
    <h1>{{ 'profileMembership.template.show.title'|trans }}</h1>
{% endblock %}

{% block content %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'membership.entity.team'|trans }}</th>
            <td>{{ entity.team }}</td>
        </tr>
        <tr>
            <th>{{ 'membership.entity.group'|trans }}</th>
            <td>{{ entity.group|trans }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['appbundle_user_menu', 'profile', 'profile.membership'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
