{% extends "AppBundle::layoutOffCanvas.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block class %}profile{% endblock class %}

{% block titleOffCanvas %}
    <h1>Profile edit</h1>
{% endblock titleOffCanvas %}

{% block contentOffCanvas %}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary"/>
    </div>
{% endblock contentOffCanvas %}

{% block sidebarOffCanvas %}
    {{ knp_menu_render(['AppBundle:Builder:userMenu', 'Profile'], {}, 'appbundle_sidebar_renderer') }}
{% endblock sidebarOffCanvas %}
